<%- include('../partials/header.ejs') %>

<!-- Comment Edit Card -->
<div class="container my-5">
    <div class="card text-bg-light mb-3 my-3" >
        <div class="card-header">
            <h3 class="">Edits</h3>
        </div>
            <div class="card-body">
                <h5 class="card-title text-start">Update your critique!</h5>
                <!-- Form for the edit/update -->
                <form method="POST" action="/comments/<%= comment.id %>/?_method=PUT">
                    <div class="form-group">
                        <div class="form-group">
                            <textarea class="form-control" name="content" id="content" required><%= comment.content %></textarea>
                        </div>
                        <!-- Submit button for edit/update form -->
                        <input type="submit" class="btn btn-primary my-2 mx-1" value="Update">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>